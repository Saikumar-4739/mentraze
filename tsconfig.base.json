{
  "compilerOptions": {
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["es2022"],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "customConditions": ["development"],
    "paths": {
      "@mentraze/backend-utils": ["packages/libs/backend-utils/src/index.ts"],
      "@mentraze/shared-models": ["packages/libs/shared-models/src/index.ts"],
      "@mentraze/shared-services": [
        "packages/libs/shared-services/src/index.ts"
      ]
    }
  }
}
